<odoo>

    <!-- library.genre form view -->
    <record id="library.genre_view_form" model="ir.ui.view">
        <field name="name">library.genre.view.form</field>
        <field name="model">library.genre</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>  
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- library.genre tree view -->
    <record id="library.genre_view_tree" model="ir.ui.view">
        <field name="name">library.genre.view.tree</field>
        <field name="model">library.genre</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- library.genre action window -->
    <record id="library.genre_action" model="ir.actions.act_window">
        <field name="name">Genres</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.genre</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No genres found! You can add a new one.     
            </p>
        </field>
    </record>

</odoo>